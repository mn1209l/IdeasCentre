    <script>
        $('#menu-toogle').on('click', function () {
            var iSelector = $(this).find('i:first');
            if (iSelector.hasClass('glyphicon glyphicon-thumbs-up')) {
                iSelector.removeClass('glyphicon glyphicon-thumbs-up');
                iSelector.addClass('glyphicon glyphicon-thumbs-down');
            }

        });

        function searchFunction() {
            var input, filter, table, tr, td, i;
            input =
                document.getElementById("ideaSearchBar");
            filter = input.value.toUpperCase();
            table = document.getElementById("myTable");
            alert(table);
            tr = table.getElementByTagName("tr");
            alert(tr);
            for (i = 0; i < tr.lenght; i++) {
                td = tr[i].getElementByTagName("td")[0];

                if (td) {
                    if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";

                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        
        }
